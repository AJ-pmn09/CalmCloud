# Copy to .env and use when backend runs on host against K-12 Docker DBs (vkasrla setup).
# Three Postgres containers: horizons 5433, houghton 5436, calumet 5434.
# When vkasrla starts the DBs (START_ALL.sh), this backend connects automatically using these ports.

USE_SINGLE_DB=false

# Auth / first login check (Horizons so master pool works)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=mindaigle_horizons
DB_USER=postgres
DB_PASSWORD=postgres

# Horizons (port 5433)
DB_HOST_HORIZONS=localhost
DB_PORT_HORIZONS=5433
DB_NAME_HORIZONS=mindaigle_horizons
DB_USER_HORIZONS=postgres
DB_PASSWORD_HORIZONS=postgres

# Houghton (port 5436)
DB_HOST_HOUGHTON=localhost
DB_PORT_HOUGHTON=5436
DB_NAME_HOUGHTON=mindaigle_houghton
DB_USER_HOUGHTON=postgres
DB_PASSWORD_HOUGHTON=postgres

# Calumet (port 5434)
DB_HOST_CALUMET=localhost
DB_PORT_CALUMET=5434
DB_NAME_CALUMET=mindaigle_calumet
DB_USER_CALUMET=postgres
DB_PASSWORD_CALUMET=postgres

PORT=3002
JWT_SECRET=your-secret-change-in-production
NODE_ENV=production
